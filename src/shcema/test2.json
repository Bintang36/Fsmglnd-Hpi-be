{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
      "Segment": {
        "type": "object",
        "properties": {
          "segmen_id": {
            "type": "integer",
            "minimum": 1
          },
          "teks_cerita": {
            "type": "string"
          },
          "kata_yang_disorot": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["segmen_id", "teks_cerita", "kata_yang_disorot"]
      }
    },
    "properties": {
      "list_stories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "judul": {
              "type": "string"
            },
            "difficult": {
              "type": "string"
            }
          },
          "required": ["judul", "difficult"]
        }
      },
      "story_detail": {
        "type": "object",
        "properties": {
          "judul": {
            "type": "string"
          },
          "isi_cerita": {
            "type": "string"
          },
          "segmen_cerita": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Segment"
            }
          },
          "total_count_segmen": {
            "type": "integer",
            "minimum": 1
          }
        },
        "required": ["judul", "isi_cerita", "segmen_cerita", "total_count_segmen"]
      }
    },
    "required": ["list_stories", "story_detail"]
  }
  